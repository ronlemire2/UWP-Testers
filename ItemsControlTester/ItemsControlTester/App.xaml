<windows:PrismUnityApplication
    x:Class="ItemsControlTester.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ItemsControlTester"
    xmlns:windows="using:Prism.Unity.Windows"
    RequestedTheme="Light">

    <Application.Resources>
        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Common/BookstoreStyles.xaml"/>
                <ResourceDictionary Source="Common/Styles.xaml"/>
                <ResourceDictionary Source="Common/StandardStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
    </Application.Resources>

</windows:PrismUnityApplication>
