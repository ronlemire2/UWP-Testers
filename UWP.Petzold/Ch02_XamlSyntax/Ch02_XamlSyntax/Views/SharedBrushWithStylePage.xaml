    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Ch02_XamlSyntax.Views"
    RequestedTheme="Dark">

    <Page.Resources>
        <x:String x:Key="appName">Shared Brush With Style App</x:String>

