<Page x:Name="Basics"
    x:Class="DataBindingTester.Views.BasicsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DataBindingTester.Views"
    xmlns:controls="using:DataBindingTester.Controls"
    xmlns:viewmodels="using:DataBindingTester.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <viewmodels:BasicsPageViewModel x:Key="BasicsPageViewModel" />
    </Page.Resources>
    <Page.DataContext>
        <Binding Source="{StaticResource BasicsPageViewModel}"/>
    </Page.DataContext>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <local:ListUserControl />

        <Border Grid.Column="1"
                BorderBrush="Black"
                BorderThickness="1"
                Background="AliceBlue"
                Margin="5">
            <StackPanel DataContext="{Binding SelectedFamilyMember}"
                    HorizontalAlignment="Stretch">
                <Border Background="CadetBlue"
                        HorizontalAlignment="Stretch">
                    <TextBlock Text="Details"
                               HorizontalAlignment="Center"/>
                </Border>
                <TextBox x:Name="txtFirstName"
                        Header="First Name"
                        Text="{Binding FirstName, Mode=TwoWay}"
                        Foreground="Black"
                        Margin="5"/>
                <TextBox x:Name="txtLastName"
                        Header="Last Name"
                        Text="{Binding LastName, Mode=TwoWay}"
                        Margin="5" />
                <StackPanel Orientation="Horizontal">
                    <TextBlock  Text="Full Name:"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Margin="5"/>
                    <TextBlock Text="{Binding FullName}"
                       VerticalAlignment="Center"
                       Margin="5"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Message:"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Margin="5"/>
                    <TextBlock Text="{Binding Message}"
                             VerticalAlignment="Center"
                               Margin="5"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <Button x:Name="button"
                    Background="CadetBlue"
                    Grid.Row="1"
                    Grid.ColumnSpan="2"
                    HorizontalAlignment="Center"
                    Margin="5"
                    Content="Click Me"
                    Command="{Binding ClickMeCommand}"
                    Width="77" />


    </Grid>
</Page>
